section.grid
  header.grid-header.js-bgPrlx
    h1.grid-h1.js-moveTitle Grid System
  h2.grid-h2 Columns
  .grid-innerWrap
    // Twelwe Columns Per Row
    div.grid-row.grid-row--1
      -for(var i=1; i<=12; i++)
        div= 'Column ' + i
    // Six Columns Per Row
    div.grid-row.grid-row--2
      -for(var i=1; i<=6; i++)
        div= 'Column ' + i
    // Four Columns Per Row
    div.grid-row.grid-row--3
      div Column 1
      div Column 2
      div Column 3
      div Column 4
    // Three Columns Per Row
    div.grid-row.grid-row--4
      div Column 1
      div Column 2
      div Column 3
    // Two Columns Per Row
    div.grid-row.grid-row--5
      div Column 1
      div Column 2
    // One Column Per Row
    div.grid-row.grid-row--6
      div Column 1
    h2.grid-h2 Offsets
    div.grid-row.grid-row--7
      -for(var i=1; i<=11; i++)
        div(class='grid-offset--#{i}')= 'Column ' + i


