outOf()
  margin-right: calc(-50vw + 50%)
  margin-left: calc(-50vw + 50%)

/*===================================================================*/

bgPrlx($url)
  .bgPrlx, .bgPrlx--single::before
    background-repeat: no-repeat
    background-attachment: fixed
    background-position: center
    background-size: cover

  .bgPrlx--single::before
    content: ''
    position: fixed
    z-index: -1
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-image: url($url)

/*===================================================================*/

imgFluid()
  width: 100%
  height: auto

/*===================================================================*/

videoFluid()
  position: relative
  overflow: hidden
  width: 100%
  height: 0
  margin-bottom: $indent
  // Preserve aspect ratio from source 16/9 => 9/16=0.5625 or '100 / (w / h)'
  padding-bottom: 56.25%
  background-color: $primaryClr

  iframe, object, embed
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

/*===================================================================*/

hidden()
  position: absolute
  top: -9999px
  left: -9999px
  overflow: hidden
  width: 0
  height: 0
  opacity: 0

/*===================================================================*/

clearfix()
  &::after
    content: ''
    display: table
    clear: both



/*===================================================================
  EFFECTS
=====================================================================*/
phWithOpacity()
  &::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: opacity .3s ease
    opacity: 1

  &:focus::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: opacity .3s ease
    opacity: 0

phMoveRight()
  &::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: text-indent .3s ease
    text-indent: 0

  &:focus::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: text-indent .5s ease
    text-indent: 500px

phMoveDown()
  &::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: line-height .5s ease
    line-height: 20px

  &:focus::-webkit-input-placeholder,
  &:-ms-input-placeholder
    transition: line-height .5s ease
    line-height: 100px

/*===================================================================*/

pulse()
    animation: radialPulse 1s infinite

  @keyframes radialPulse
    0%
      box-shadow: 0 0 0 0px rgba(0, 0, 0, .5)
    100%
      box-shadow: 0 0 0 30px rgba(0, 0, 0, 0)

/*===================================================================*/

onActive()
  &:focus-within
    box-shadow: 0 .2em 2.5em #c4c4c4
    transform: scale(1.025)

/*===================================================================*/

shadow()
  box-shadow:
    0 10px 20px rgba($darkClr, .19),
    0 6px 6px rgba($darkClr, .23)

/*===================================================================*/

// To use it add class .link
underline()
  position: relative
  transition: all .6s
  text-decoration: none
  &:before
    content: ''
    position: absolute
    bottom: 0
    width: 0
    height: 2px
    transition: all .3s
    background: $linkClr
  &:hover:before
    width: 100%
    background: $primaryClr
  &--toRight
    &:before
      left: 0
    &:hover:before
      left: 0
  &--center
    &:before
      left: 50%
    &:hover:before
      left: 0
  &--toLeft
    &:before
      right: 0
    &:hover:before
      right: 0
  &--through
    &:before
      right: 0
    &:hover:before
      left: 0
