/*!===================================================================
  TYPOGRAPHY
=====================================================================*/

/* Vars
=====================================================================*/
$sansSerif = -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol'
$monospace = 'SFMono-Regular', Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace
$serif = Constantia, Lucida Bright, Lucidabright, Lucida Serif, Lucida, DejaVu Serif, Bitstream Vera Serif, Liberation Serif, Georgia, serif


$fontFamily = $sansSerif
$fontSize = 16px
$lineHeight = 1.5

$indent = 16px
$indent--lg = $indent * 2 // 32
$indent--md = $indent / 2 + $indent // 24
$indent--sm = $indent / 2 // 8
$indent--xs = $indent--sm / 2 // 4

$fontSize--xl = $fontSize * 2.5 // 40
$fontSize--lg = $fontSize * 2 // 32
$fontSize--md = $fontSize * 1.25 // 20
$fontSize--sm = $fontSize * .875 // 14
// $fontSize-xs = $fontSize * .75 // 12
$fontSize--xs = $fontSize * .625 // 10


/* Mixins
=====================================================================*/
/*! Fluid Text with fallback
* 1rem - font size
* .25 (4px) - max font size => 16px+4px=20px
* 20rem (320px) - min width
* 80 (1280px) - max width.
*/

fluidTxtInRem($fz = 1rem, $step = .25)
  font-size: $fz
  font-size: 'calc(%s + %s * ((100vw - 20rem) / 80))' % ($fz $step)

fluidTxtInPx($fz = 16px, $step = 4)
  font-size: $fz
  font-size: 'calc(%s + %s * ((100vw - 20rem) / 80))' % ($fz $step)

truncated($width = 50%)
  overflow: hidden
  max-width: $width
  white-space: nowrap
  text-overflow: ellipsis


/*! Fonts
=====================================================================*/


/*! Rules for text elements
=====================================================================*/
h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: $indent--sm
  color: $textClr
  line-height: 1.25

h1
  font-size: $fontSize * 2.25 // 36
  font-size: calc(2.25rem + .5 * ((100vw - 20rem) / 80))
h2
  font-size: $fontSize * 1.875 // 30
  font-size: calc(1.875rem + .5 * ((100vw - 20rem) / 80))
h3
  font-size: $fontSize * 1.5 // 24
  font-size: calc(1.5rem + .5 * ((100vw - 20rem) / 80))
h4
  font-size: $fontSize * 1.375 // 22
  font-size: calc(1.375rem + .5 * ((100vw - 20rem) / 80))
h5
  font-size: $fontSize * 1.25 // 20
  font-size: calc(1.25rem + .5 * ((100vw - 20rem) / 80))
h6
  font-size: $fontSize * 1.125 // 18
  font-size: calc(1.125rem + .5 * ((100vw - 20rem) / 80))

p
  margin-top: 0
  margin-bottom: $indent
  color: $textClr
  font-size: 1.25rem
  font-size: calc(1rem + .25 * ((100vw - 20rem) / 80))

address
  margin-bottom: $indent
  font-style: normal
  line-height: inherit

dl
  margin-top: 0
  margin-bottom: $indent

dt
  font-weight: bold

b, strong
  font-weight: bolder

small
  font-size: 80%

pre, code, kbd, samp
  font-family: $monospace
  font-size: inherit
