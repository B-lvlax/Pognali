/*!===================================================================
  TYPOGRAPHY
=====================================================================*/

/*! Fonts
=====================================================================*/


/* Vars
=====================================================================*/
$sansSerif = system-ui, -apple-system, 'Segoe UI', Roboto, Ubuntu, Cantarell, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji', sans-serif
$monospace = 'SFMono-Regular', Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace
$serif = Constantia, 'Lucida Bright', Lucidabright, 'Lucida Serif', Lucida, 'DejaVu Serif', 'Bitstream Vera Serif', 'Liberation Serif', Georgia, serif


$defaultFont = $sansSerif
$fontSize = 16px
$lineHeight = 1.5

$indent = 16px
$indent--lg = $indent * 2 // 32
$indent--md = $indent / 2 + $indent // 24
$indent--sm = $indent / 2 // 8
$indent--xs = $indent--sm / 2 // 4

$fontSize--xl = 2.5rem // 40
$fontSize--lg = 2rem // 32
$fontSize--md = 1.25rem // 20
$fontSize--sm = .875rem // 14
// $fontSize-xs = $fontSize * .75 // 12
$fontSize--xs = .625rem // 10


/* Mixins
=====================================================================*/
/*! Fluid Text with fallback
* 1rem - font size
* .25 (4px) - max font size => 16px+4px=20px
* 20rem (320px) - min width
* 80 (1280px) - max width.
*/

fluidTxtInRem($fz = 1rem, $step = .25) // .25=4px, .125-2px, 0.0625=1px
  font-size: $fz
  font-size: 'calc(%s + %s * ((100vw - 20rem) / 80))' % ($fz $step)

fluidTxtInPx($fz = 16px, $step = 4)
  font-size: $fz
  font-size: 'calc(%s + %s * ((100vw - 20rem) / 80))' % ($fz $step)

truncated($width = 50%)
  overflow: hidden
  max-width: $width
  white-space: nowrap
  text-overflow: ellipsis


/*! Rules for text elements
=====================================================================*/
h1, h2, h3, h4, h5, h6
  margin-top: 0
  margin-bottom: $indent--sm
  line-height: 1.25

h1
  fluidTxtInRem(2.25rem, .5) // 36
h2
  fluidTxtInRem(1.875rem, .5) // 30
h3
  fluidTxtInRem(1.5rem, .5) // 24
h4
  fluidTxtInRem(1.375rem, .5) // 22
h5
  fluidTxtInRem(1.25rem, .5) // 20
h6
  fluidTxtInRem(1.125rem, .5) // 18

p
  margin-top: 0
  margin-bottom: $indent
  fluidTxtInRem(1rem, .125) // 18

address
  margin-bottom: $indent
  font-style: normal
  line-height: inherit

dl
  margin-top: 0
  margin-bottom: $indent

dt
  font-weight: bold

b, strong
  font-weight: bolder

small
  font-size: 80%

pre, code, kbd, samp
  font-family: $monospace
  font-size: inherit
