$header
  display: flex
  justify-content: center
  align-items: center
  height: 400px
  outOf()
  background-color: $lighterClr

$caption
  margin-bottom: $indent
  padding: $indent--sm $indent
  text-align: center
  color: $lighterClr
  background-color: $darkerClr

$caption--styled
  margin-right: $indent
  margin-left: $indent
  padding: $indent $indent--lg
  letter-spacing: 8px
  word-break: keep-all
  color: $lightClr
  border: 6px solid $lighterClr
  border-radius: $borderRad
  background-color: rgba(0, 0, 0, .6)
  text-transform: uppercase
  fluidTxtInRem(, 2)

.slogan
  @extend $caption
  margin-right: -($indent--lg)
  margin-left: -($indent--lg)
  padding-top: $indent--lg
  padding-bottom: $indent--lg
  border-top-left-radius: $borderRad
  border-top-right-radius: $borderRad
  font-size: $fontSize--xl
  font-weight: bold


/*! Section OPENNING
===================================================================*/
.intro
  &-h2
    @extend $caption
  &-contents
    row()
  &-items
    min-width: 160px
    margin-right: $indent


/*! Section TEXT
===================================================================*/
.text
  &-header
    @extend $header
    background-image: url('https://monosnap.com/image/Hc3wZ7kqvNHJVBPUoaiY73eFP2LJMw')
  &-h1
    @extend $caption--styled
  &-h2
    @extend $caption
  &-truncated
    truncated()
  &-size--1
    font-size: $fontSize--xl
  &-size--2
    font-size: $fontSize--lg
  &-size--3
    font-size: $fontSize--md
  &-size--4
    font-size: $fontSize--sm
  &-size--5
    font-size: $fontSize--xs
  &-innerWrap
    row-0()
  &-lists, &-inline
    col(6)
    min-width: 250px
    flex-grow: 1
  &-link
    underline($accentClr, $primaryClr)


/*! Section FORMS
===================================================================*/
.forms
  &-header
    @extend $header
    background-image: url('https://monosnap.com/image/7oFsRFwGOLRAWZ26udJQVOA1J7pLW4')
  &-h1
    @extend $caption--styled
  &-h2
    @extend $caption
  &-requiredTxt
    margin-bottom: $indent
    color: $middleClr
  &-inputsGroup
    @extend $inputGroup--labelVisible
  &-selectGroup,
  &-checkboxGroup,
  &-radioGroup,
  &-html5InputsGroup
    @extend $inputGroup
  &-action
    margin-bottom: $indent--lg
  &-groupTitle
    &::before
      content: '*'
      margin-right: $indent--sm
  &-helpTxt
    width: 100%
    height: 0
    transition: all .6s ease
    text-align: center
    opacity: 0
    color: $middleClr
    font-size: $fontSize--sm
  &-actionGroup
    row()
    justify-content: space-around

  &-inputsGroup input,
  &-html5InputsGroup input
    &:focus ~ .forms-helpTxt
      height: auto
      opacity: 1

  &-actionBtns
    display: flex
  &-btn
    flex-grow: 1
    margin: 0 $indent--sm $indent
    padding: $indent--xs $indent--sm
    cursor: pointer
    color: $darkClr
    border: 1px solid $borderClr
    border-radius: $borderRad
    background-color: $lightClr
    &:hover
      color: $lightClr
      background-color: $primaryClr
    &:active
      transform: translateY(4px)
      shadow()
    &--reset
      background-color: $lighterClr
      &:hover, &:focus
        background-color: lighten(red, 35%)


/*! Section GRID
===================================================================*/
.grid
  &-innerWrap
    overflow-x: auto
    gridTest()
  &-header
    @extend $header
    background-image: url('https://monosnap.com/image/WmqiwrBdYXwkcofOuiPp88gL1a91th')
  &-h1
    @extend $caption--styled
  &-h2
    @extend $caption
  &-row
    row()
  &-row > *
    text-align: center
    border: 1px solid
    border-radius: $borderRad
    background-color: rgba(0,0,0, .3)
  /*! Columns */
  for num in(1..4)
    &-row--{num} > *
      col(num)
  &-row--5 > *
    col(6)
  &-row--6 > *
    col(12)
  /*! Offsets */
  for num in (1..11)
    &-offset--{num}
      col(12 - num)
      offset(num)


/*! Section EMBEDDED
===================================================================*/
.embedded
  &-header
    @extend $header
    background-image: url('https://monosnap.com/image/HrfN4chtfzFNuk9VkmupiXatWIpMTE')
  &-h1
    @extend $caption--styled
  &-h2
    @extend $caption
  &-figureWrap, &-rest
    row-0()
  &-figureWrap > *
    col(6)
    min-width: 250px
    flex-grow: 1
  &-rest > *
    col(4)
    min-width: 250px
    flex-grow: 1
  &-iframeWrap
    /*! Fix sizes on IOS */
    overflow: auto
    -webkit-overflow-scrolling: touch
    height: 400px


/*! Section Other
===================================================================*/
.other
  &-header
    @extend $header
    background-image: url('https://monosnap.com/image/SYvEzyUjgZs6dIevHhZJdJkV7RO972')
  &-h1
    @extend $caption--styled
  &-h2
    @extend $caption
  &-lazy img
    margin-bottom: $indent
