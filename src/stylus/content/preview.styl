body
  background-color: $lighterClr

.layoutCenter
  margin-top: $indent--lg
  margin-bottom: $indent-lg
  border-radius: $borderRad
  background-color: $lightClr
  shadow()

.title
  position: fixed
  z-index: 5
  top: 0
  left: 0
  display: flex
  justify-content: center
  align-items: center
  width: 100%
  height: 100%
  animation: hideBg 2s 4s linear forwards
  background-color: rgba(0, 0, 0, .7)

  &-txt
    animation: slide-right 4s 1.5s cubic-bezier(.215, .610, .355, 1.000) forwards
    text-shadow:
      0 -5px 0 #7FDBFF,
      0 -10px 0 #39CCCC,
      0 -15px 0 #3D9970,
      0 -20px 0 #2ECC40,
      0 -25px 0 #01FF70,
      0 -30px 0 #FFDC00,
      0 -35px 0 #FF851B,
      0 -40px 0 #FF4136,
      0 -45px 0 #F012BE,
      0 -50px 0 #B10DC9
    fluidTxtInPx(60px, 20)


@keyframes slide-right
  0%
    transform: skewX(0deg)
  10%
    transform: skewX(20deg) translateX(-50px)
  100%
    transform: translateX(2000px)

@keyframes hideBg
  0%
    opacity: 1
  100%
    top: -2000px
    opacity: 0


/* Styles for Preview of boilerplate
=====================================================================*/
.mainTitle
  text-align: center


//! Section TEXT
.text
  overflow-x: auto
  &-p1
    font-size: $fontSize--xl
  &-p2
    font-size: $fontSize--lg
  &-p3
    font-size: $fontSize--md
  &-p4
    font-size: $fontSize--sm
  &-p5
    font-size: $fontSize--xs
  &-ellipsis
    ellipsis()
  &-innerWrap
    row-0()
  &-lists, &-inline
    col(6)
    min-width: 250px
    flex-grow: 1
  // &-tables


//! Section FORMS
// .forms
.inputs-inputGroup
  @extend $inputGroup--labelHidden

.inputStates-inputGroup
  @extend $inputGroup--labelVisible

.select-inputGroup,
.checkboxInputs-inputGroup,
.radioInputs-inputGroup,
.html5Inputs-inputGroup
  @extend $inputGroup


//! Section GRID
.grid
  overflow-x: auto
  gridTest()
  &-row
    row()
  &-row > *
    text-align: center
    border: 1px solid
    border-radius: $borderRad
    background-color: rgba(0,0,0, .3)
  //! Columns
  for num in(1..4)
    &-row--{num} > *
      col(num)
  &-row--5 > *
    col(6)
  &-row--6 > *
    col(12)
  //! Offsets
  for num in (1..11)
    &-offset--{num}
      col(12 - num)
      offset(num)


//! Section EMBEDDED
.embedded
  &-figureWrap, &-rest
    row-0()
  &-figureWrap > *
    col(6)
    min-width: 250px
    flex-grow: 1
  &-rest > *
    col(4)
    min-width: 250px
    flex-grow: 1
