/*!===================================================================
  MEDIA QUERRIES
=====================================================================*/
/* Vars
=====================================================================*/
$screen--xs = 320px
$screen--sm = 576px
$screen--md = 768px
$screen--lg = 992px
$screen--xl = 1280px


/* Rules
=====================================================================*/
@media screen and (max-width: $screen--md)
  //! Styles for page 404
  .page404
    padding-top: 0
    &-nums
      flex-direction: column
      align-items: center
    &-num
      margin-bottom: 0
      font-size: 200px
      &:nth-of-type(2)::before,
      &:nth-of-type(2)::after
        top: -16px
        left: -40px
        width: 240px
        height: 240px
        animation-duration: 4s
